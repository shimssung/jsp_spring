<!-- 암호화 후 로그인 -->
    <!-- loginRow --> 

    <select id="loginRow"
            parameterType = "userRequestDTO"
            resultType = "userResponseDTO">
        SELECT ID, PWD, NAME, POINT, IMGURL
        FROM   project_user_tbl
        WHERE  ID = #{ id }

    </select>   

    <!-- joinRow --> 

    <insert id="joinRow"
            parameterType="userRequestDTO">
        INSERT INTO project_user_tbl(ID, PWD, NAME, IMGURL)
        VALUES (#{id}, #{pwd}, #{name}, #{imgUrl})
    </insert>
    
